<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xianyu.myblogbackend.mapper.UserMapper">
    <insert id="insert" parameterType="com.xianyu.myblogbackend.model.entity.User">
        insert into users(username,password,email,login_time,role)
            values (#{userName},#{password},#{email},#{loginTime},#{role})
    </insert>
    <select id="getByUsername" resultType="com.xianyu.myblogbackend.model.entity.User">
        select * from users
        <where>
            username = #{username}
        </where>
    </select>
</mapper>
